<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Validation Errors on Create Account Page">
	<listeners>
		<listener class-name="EcommerceAutomation.SeleniumFramework.TestComponents.Listener" />
	</listeners>
	<test name="Validation Errors on Create Account Page">
		<classes>
			<class name="EcommerceAutomation.SeleniumFramework.Tests.CreateAccount">
				<methods>
					<include name="verifyErrorOnCreateAccountForExistingEmail"></include>
					<include name="validateErrorOnCreateAccountForShortPassword"></include>
				</methods>
			</class>
		</classes>
	</test>
</suite>